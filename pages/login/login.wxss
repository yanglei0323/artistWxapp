.login-box{
	width:100%;
	height:100vh;
	overflow:hidden;
	position:relative;
}
.bg-img{
	width:100%;
	min-height:100vh;
	position:absolute;
	left:0;
	top:0;
	z-index:99;
}
.input-manage{
	margin:302rpx auto 150rpx;
	position:relative;
	z-index:999;
}
.input-manage input{
	width:600rpx;
	height:87rpx;
	margin:0 auto;
	font-size:28rpx;
	color:#fff;
	line-height:87rpx;
	text-align:center;
	border:none;
	border-bottom:1rpx solid #fff;
}
.placeholder{
	color:#fff;
}
.forgetPwd{
	font-size:20rpx;
	line-height:20rpx;
	color:#fff;
	position:absolute;
	right:95rpx;
	top:186rpx;
}
.confirm{
	width:598rpx;
	height:86rpx;
	margin:0 auto;
	border:1rpx solid #fff;
	border-radius:5rpx;
	text-align:center;
	line-height:86rpx;
	z-index:999;
	position:relative;
	color:#fff;
}
